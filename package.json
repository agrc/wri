{
  "name": "@ugrc/wri",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "build-storybook": "storybook build",
    "check": "tsc -b",
    "copy:arcgis": "cpy \"./node_modules/@arcgis/core/assets/**\" ./public/js/ugrc/assets",
    "dev:extractions-test": "vite --open /extractions.test.html",
    "dev:firebase-emulators": "./scripts/start-emulators.sh",
    "dev:vite": "vite",
    "format": "prettier . --write",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "concurrently 'cd functions && npm run build:watch' 'npm run dev:vite' 'npm run dev:firebase-emulators'",
    "start:ci": "vite --host",
    "start:with-db": "cross-env USE_PROD_DB=true npm run start",
    "storybook": "storybook dev -p 6006",
    "test": "vitest"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arcgis/core": "^4.34.8",
