{
  "name": "@ugrc/wri",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "build-storybook": "storybook build",
    "check": "tsc -b",
    "copy:arcgis": "cpy \"./node_modules/@arcgis/core/assets/**\" ./public/js/ugrc/assets",
    "dev:firebase-emulators": "firebase emulators:start --only functions",
    "dev:vite": "vite",
    "format": "prettier . --write",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "concurrently 'cd functions && npm run build:watch' 'npm run dev:vite' 'npm run dev:firebase-emulators'",
    "start:ci": "vite --host",
    "storybook": "storybook dev -p 6006",
    "test": "vitest"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arcgis/core": "^4.32.10",
    "@tanstack/react-query": "^5.76.1",
    "@ugrc/eslint-config": "^1.2.2",
    "@ugrc/layer-selector": "^6.4.0",
    "@ugrc/utah-design-system": "^1.27.1",
    "clsx": "^2.1.1",
    "firebase": "^11.7.3",
    "immer": "^10.1.1",
    "react": "^19.1.0",
    "react-aria": "^3.39.0",
    "react-aria-components": "^1.8.0",
    "react-content-loader": "^7.0.2",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-stately": "^3.37.0",
    "tailwind-variants": "^0.3.1",
    "use-immer": "^0.11.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@ugrc/tsconfigs": "^1.0.3",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.26.0",
    "eslint-plugin-storybook": "0.12.0",
    "firebase-tools": "^14.3.1",
    "lucide-react": "^0.510.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.13",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.4.16",
    "tailwindcss-react-aria-components": "^1.2.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
