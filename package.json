{
  "name": "@ugrc/wri",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "build-storybook": "storybook build",
    "check": "tsc -b",
    "copy:arcgis": "cpy \"./node_modules/@arcgis/core/assets/**\" ./public/js/ugrc/assets",
    "dev:firebase-emulators": "firebase emulators:start --only functions",
    "dev:vite": "vite",
    "format": "prettier . --write",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "concurrently 'cd functions && npm run build:watch' 'npm run dev:vite' 'npm run dev:firebase-emulators'",
    "start:ci": "vite --host",
    "storybook": "storybook dev -p 6006",
    "test": "vitest"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arcgis/core": "^4.33.9",
    "@tanstack/react-query": "^5.83.0",
    "@ugrc/eslint-config": "^1.2.3",
    "@ugrc/layer-selector": "^6.4.0",
    "@ugrc/utah-design-system": "^1.27.3",
    "clsx": "^2.1.1",
    "firebase": "^11.10.0",
    "immer": "^10.1.1",
    "react": "^19.1.0",
    "react-aria": "^3.40.0",
    "react-aria-components": "^1.9.0",
    "react-content-loader": "^7.1.1",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-stately": "^3.38.0",
    "tailwind-variants": "^0.3.1",
    "use-immer": "^0.11.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@storybook/addon-links": "^9.0.18",
    "@storybook/addon-onboarding": "^9.0.18",
    "@storybook/react-vite": "^9.0.18",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@ugrc/tsconfigs": "^1.0.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-storybook": "9.0.18",
    "firebase-tools": "^14.11.0",
    "lucide-react": "^0.525.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "storybook": "^9.0.18",
    "tailwindcss": "^3.4.16",
    "tailwindcss-react-aria-components": "^1.2.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-package-version": "^1.1.0",
    "vitest": "^3.1.3",
    "wait-on": "^8.0.4",
    "@storybook/addon-docs": "^9.0.18"
  }
}
