{
  "name": "functions",
  "private": true,
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "check": "tsc -b",
    "clean": "rimraf lib",
    "deploy": "firebase deploy --only functions",
    "lint": "eslint .",
    "logs": "firebase functions:log",
    "migrate:create": "node --import tsx/esm ./node_modules/.bin/knex migrate:make -x ts",
    "seed": "node --import tsx/esm ./node_modules/.bin/knex seed:run",
    "seed:create": "node --import tsx/esm ./node_modules/.bin/knex seed:make 02_rollup -x ts",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run serve"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7",
    "tedious": "^18.6.1"
  },
  "devDependencies": {
    "eslint": "^9.31.0",
    "firebase-functions-test": "^3.4.1",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": "22"
  }
}
