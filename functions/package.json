{
  "name": "@ugrc/wri-functions",
  "private": true,
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "check": "tsc -b",
    "clean": "rimraf lib",
    "deploy": "firebase deploy --only functions",
    "lint": "eslint .",
    "logs": "firebase functions:log",
    "migrate": "node --import tsx/esm ./node_modules/.bin/knex migrate:up",
    "migrate:create": "node --import tsx/esm ./node_modules/.bin/knex migrate:make -x ts",
    "seed": "node --import tsx/esm ./node_modules/.bin/knex seed:run",
    "seed:create": "node --import tsx/esm ./node_modules/.bin/knex seed:make -x ts",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run serve"
  },
  "dependencies": {
    "@arcgis/core": "^4.34.8",
    "@esri/arcgis-rest-feature-service": "^4.8.0",
    "@esri/arcgis-rest-request": "^4.8.0",
    "@google-cloud/cloud-sql-connector": "^1.9.0",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.5",
    "knex": "^3.1.0",
    "ky": "^1.14.3",
    "tedious": "^19.1.3"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "firebase-functions-test": "^3.4.1",
    "firebase-tools": "^15.0.0",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.6.2",
    "sqlite3": "^5.1.7"
  },
  "engines": {
    "node": "22"
  }
}
