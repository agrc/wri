{
  "name": "functions",
  "private": true,
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "check": "tsc -b",
    "clean": "rimraf lib",
    "deploy": "firebase deploy --only functions",
    "lint": "eslint .",
    "logs": "firebase functions:log",
    "migrate": "node --import tsx/esm ./node_modules/.bin/knex migrate:up",
    "migrate:create": "node --import tsx/esm ./node_modules/.bin/knex migrate:make -x ts",
    "seed": "node --import tsx/esm ./node_modules/.bin/knex seed:run",
    "seed:create": "node --import tsx/esm ./node_modules/.bin/knex seed:make -x ts",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run serve"
  },
  "dependencies": {
    "@google-cloud/cloud-sql-connector": "^1.8.4",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^6.4.0",
    "knex": "^3.1.0",
    "tedious": "^18.6.1"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "firebase-functions-test": "^3.4.1",
    "firebase-tools": "^14.26.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.4.1",
    "sqlite3": "^5.1.7"
  },
  "engines": {
    "node": "22"
  }
}
